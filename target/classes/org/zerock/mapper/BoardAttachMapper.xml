<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.BoardAttachMapper">
	<resultMap type="org.zerock.domain.BoardVO" id="boardMap">
		<id property="bno" column="bno"/>
		<result property="title" column="title" />
		<result property="content" column="content"/>
		<result property="writer" column="writer"/>
		<result property="regdate" column="regdate"/>
		<result property="updatedate" column="updatedate"/>
		<result property="boardType" column="type"/>
		<result property="replyCnt" column="replycnt"/>
		
		<collection property="attachList" resultMap="boardAttachMap" />
	</resultMap>
	
	<resultMap type="org.zerock.domain.BoardAttachVO" id="boardAttachMap">
		<result property="uuid" column="uuid" />
		<result property="uploadPath" column="uploadpath"/>
		<result property="fileName" column="filename"/>
		<result property="fileType" column="filetype"/>
		<result property="previewImg" column="previewimg"/>
		
		<result property="ano" column="ano"/> <!-- 주키이자 외래키 -->
	</resultMap>
	<insert id="insert">
		insert into tbl_attach(uuid, uploadpath, filename, filetype, ano, previewimg)
		values (#{uuid}, #{uploadPath}, #{fileName}, #{fileType}, #{ano}, #{previewImg})
	</insert>
	
	<delete id="delete">
		delete from tbl_attach where uuid = #{uuid}
	</delete>
	
	<delete id="deleteAll">
		delete from tbl_attach where ano = #{ano}
	</delete>
	
	<select id="findByBno" resultType="org.zerock.domain.BoardAttachVO">
		select *
		from tbl_attach
		where ano = #{ano}		
	</select>

	<select id="getPhotoList" resultMap="boardMap">
		select * from 
			(
					select board.bno, title, content, writer, regdate, updatedate, type, replycnt, uuid, uploadpath, filename, previewimg 
					from tbl_board board left outer join tbl_attach attach on board.bno = attach.ano 
			        order by regdate desc
			)
		<![CDATA[
		where rownum <= #{amount} and type = #{boardType}
		]]>
	</select>
</mapper>